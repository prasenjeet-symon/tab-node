{
    "compilerOptions": {
      "baseUrl": "./",
      "strict": true,
      "noUnusedLocals": true,
      "module": "ESNext",
      "noImplicitAny": true,
      "sourceMap": true,
      "declaration": true,
      "declarationDir": "./build/esm/",
      "outDir": "./build/esm/",
      "target": "ESNext",
      "declarationMap": true,
      "downlevelIteration": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "lib": [
        "ESNext"
      ],
    },
    "include": [
      "lib/**/*"
    ],
    "exclude": [
      "node_modules",
    ],
  }